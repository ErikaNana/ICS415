%h1 Login
= form_tag(validate_path, method: "post", :class => "form-horizontal", :id => "aForm") do
    %div{:class => "form-group"}
        -if flash[:notice]
            %label{:class => "message col-sm-2 control-label", :id => "notice"}= flash[:notice]
        -elsif flash[:warning]
            %label{:class => "message col-sm-2 control-label", :id => "warning"}= flash[:warning]
    %div{:class => "form-group"}
        %label{:class => "col-sm-2 control-label"}Email
        %div{:class => "col-sm-4"}
            %input{:type => "email", :class => "form-control",  :name => "user[email]"}
    %div{:class => "form-group"}
        %label{:class => "col-sm-2 control-label"}Password
        %div{:class => "col-sm-4"}
            %input{:type => "password", :class => "form-control", :name => "user[password]"}
    %div{:class => "form-group"}
        %div{:class => "col-sm-offset-2 col-sm-10"}
            %button{:type => "submit", :class => "btn btn-default"}Login
            =link_to "Login as a guest?", validate_path, {:method => "post", :id => "pretty"}
