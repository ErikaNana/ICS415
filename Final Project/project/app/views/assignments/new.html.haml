%h1 Create Assignment
%form{:role => "form-center", :action => course_assignments_path, :method => "post", :class => "form-horizontal", :id => "aForm"}
    %div{:class => "form-group"}
        -if flash[:notice]
            %label{:class => "message col-sm-2 control-label", :id => "notice"}= flash[:notice]
        -elsif flash[:warning]
            %label{:class => "message col-sm-2 control-label", :id => "warning"}= flash[:warning]
    %div{:class => "form-group"}
        %label{:for => "inputAssignmentName", :class => "col-sm-2 control-label"}Assignment Name
        %div{:class => "col-sm-4"}
            %input{:type => "text", :class => "form-control", :id => "inputAssignmentName", :name => "assignment[name]"}
    %div{:class => "form-group"}
        %label{:for => "inputDueDate", :class => "col-sm-2 control-label"}Due Date
        %div{:class => "col-sm-4"}
            %input{:type => "date", :class => "form-control", :id => "inputDueDate", :name => "assignment[dueDate]"}
    %div{:class => "form-group"}
        %label{:for => "inputDescription", :class => "col-sm-2 control-label"}Description
        %div{:class => "col-sm-4", :id => "inputDescription"}
            %textarea{:class => "form-control", :name => "assignment[description"}
    %div{:class => "form-group"}
        %div{:class => "col-sm-offset-2 col-sm-10"}
            %button{:type => "submit", :class => "btn btn-default"}Save